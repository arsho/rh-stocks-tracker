{
  "manifest_version": 3,
  "name": "RH Stocks Tracker",
  "version": "1.0.0",
  "homepage_url": "https://github.com/arsho/rh-stocks-tracker",
  "description": "Adds a summary panel on Robinhood account investing page (https://robinhood.com/account/investing) to show stock profit, loss, net, and trend over time.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://robinhood.com/account/investing"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://robinhood.com/account/investing"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
